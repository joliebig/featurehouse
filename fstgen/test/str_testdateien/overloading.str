module overloading
imports libstratego-lib
signature
  constructors
    A   : Term
    B   : Term
    C   : Term
    D   : Term 
    F   : Term -> Term
    G   : Term * Term -> Term

strategies

  main-overloading = 
   <[f(RA); RD, f(RA, RB); RC]	> [F(A),G(A,B)] => [F(D),G(D,C)]

  f(s) = F(s)

  f(s1, s2) = G(s1, s2)

rules

  RA   : A -> B

  RB   : B -> C

  RC   : G(x, y) -> G(x', y) where <oncetd((B -> D))> x => x'

  RD   : F(x) -> F(x') where <oncebu((B -> D))> x => x'

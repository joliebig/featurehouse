module let-test
imports libstratego-lib

strategies

  main-let_test = let-test

  let-test = 
    test-suite(
      !"Let test suite"
    , let-test-strategy-1
    ; let-test-strategy-2
    ; let-test-strategy-3
    ; let-test-rule-1
    ; let-test-rule-2
    )

  let-test-strategy-1 =
    apply-test(
      !"let-test-strategy"
    , let Foo = !2
      in
        Foo
      end
    , !1
    , !2
    )

  let-test-strategy-2 =
    apply-test(
      !"let-test-strategy"
    , let Foo = ?t ; !2 
      in
        Foo
      end
    , !1
    , !2
    )

  let-test-strategy-3 =
    apply-and-fail(
      !"let-test-strategy-3"
    , let Foo = ?t ; !(t,t)
      in
        map(Foo)
      end
    , ![1,2,3]
    )

  let-test-rule-1 =
    apply-test(
      !"let-test-rule-1"
    , let Foo : t -> 2 
      in
        Foo
      end
    , !1
    , !2
    )

  let-test-rule-2 =
    apply-and-fail(
      !"let-test-rule-2"
    , let Foo : t -> (t,t)
      in
        map(Foo)
      end
    , ![1,2,3]
    )


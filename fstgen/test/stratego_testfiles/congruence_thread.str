signature
  constructors
    sort : String -> Symbol
    lit  : String -> Symbol
    KW   : String -> Box

strategies

  congruence-thread-test2 = 
    apply-test(!"congruence-thread-test2"
	      , thread-map(number-sort <+ (pp-lit,id))
	      ,!([sort("Do"),lit("1"),sort("Plus"),lit("2")],1)
	      ,!([1, KW("1"), 2, KW("2")], 3)
	      )

rules

  number-sort : 
    (sort(x), i) -> (i, <add>(i,1))

  pp-lit : 
    lit(x) -> KW(x)

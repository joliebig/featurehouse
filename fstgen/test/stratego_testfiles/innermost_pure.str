module innermost-pure
imports libstratego-lib
signature
  sorts Nat
  constructors
    Zero : Nat
    Succ : Nat -> Nat
    Plus : Nat * Nat -> Nat
rules

  A : Plus(Zero, x) -> x

  B : Plus(Succ(x), y) -> Succ(Plus(x, y))

strategies

  my-bottomup(s) =
    rec x(all(x); s)

  my-innermost(s) = 
    my-bottomup(red(s))

  innermost-with-assertion(s) = 
    my-bottomup(red(test(all(nf(s))); s))

  red(s) = 
    rec x(s; my-bottomup(x) <+ id)

  nf(s) = 
    my-bottomup(not(s))

strategies

  main-innermost_pure = 
    test-suite(!"innermost-pure",
        test1
    )

  test1 = 
    apply-test(!"test1"
              , my-innermost(A + B)
              ,!Plus(Succ(Plus(Succ(Zero),Succ(Zero))), Succ(Zero))
              ,!Succ(Succ(Succ(Succ(Zero))))
              )

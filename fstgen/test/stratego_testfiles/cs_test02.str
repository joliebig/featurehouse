/**
 * Tests for quotations that are represented in asfix
 */
module cs-test02
imports AsFix libstratego-lib
strategies

  main-cs_test02 =
    test-suite(!"cs-test02", tests)

  tests = 
    apply-and-check(!"test 1"
    , id
    , !|[ f(a, b) ]|
    , ?appl(
         prod(
           [ cf(sort("Id"))
           , cf(opt(layout))
           , lit("(")
           , cf(opt(layout))
           , cf(iter-star-sep(sort("Exp"),lit(",")))
           , cf(opt(layout))
           , lit(")")
           ]
         , cf(sort("Exp")), attrs(_)
         )
       , [ appl(_, _)  // id
         , appl(_, []) // layout
         , appl(_, [40])  // (
         , appl(_, []) // layout
         , appl(_, _)  // list
         , appl(_, []) // layout
         , appl(_, [41])  // )
         ]
       )
     )

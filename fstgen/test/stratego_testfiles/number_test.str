module number-test
imports libstratego-lib
rules

  Double : 0.6 -> 1.2

strategies

  main-number_test = 
    test-suite(!"number-test",
	test0;
	test1;
	test2;
	test3;
	test4
    )

  test0 =
    apply-test(!"test0"
	, id#(id)
	, !0.6
	, !0.6
	)

  test1 =
    apply-test(!"test1"
	, Double; 1.2; id#(id)
	, !0.6
	, !1.2
	)

  test2 =
    apply-test(!"test2"
	, is-real
	, !0.6
	, !0.6
	)

  test3 =
    apply-and-fail(!"test3"
	, add
	, !(1,"a")
	, !()
	)

  test4 =
    apply-test(!"test4"
	, add
	, !(1,1)
	, !2
	)

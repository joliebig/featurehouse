// original test reported by Daniel Waddington

  runtest3 =
    !( DeclId(Id("a"{0}))
     , DeclId(Id("b"{1}))
     , DeclId(Id("c"{2}){3})
     , DeclId(Id("d"))
     )
    ; topdown(
        {t,t2,x:
         test(!"c" ; ?t);
         if DeclId(Id(test(?t))) /* works with O3 */ then
           debug(!"1st bang method matched ok:")
         else
           debug(!"no match: ")
         end;
         
         if DeclId(Id(test(?t))) /* works with O3 */ then
           debug(!"2nd bang method matched ok:")
         else
           debug(!"no match: ")
         end
        })


module test96
imports libstratego-lib
signature
  constructors
          : a * b -> (a, b)
    Nil   : List(a)
    Cons  : a * List(a) -> List(a)

    Var   : String -> Expr
    Plus  : Expr * Expr -> Expr

rules

  A(env) :
    Var(x) -> i
    where
      env
      ; fetch(?(x, i))

  B :
    Plus(i, j) -> <add> (i, j)
    where
        <is-int> i
      ; <is-int> j

strategies

  eval(env) = 
    innermost(A(env) + B)

  main-test96 =  
    !Plus(Var("a"), Plus(Var("b"), Var("c")))
    ; eval(![("a", 1), ("b", 2), ("c", 3)])
    ; ?6
